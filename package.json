{
  "name": "@megabytelabs/dockerfile-common-files",
  "version": "1.0.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Includes common files used across Dockerfile repositories",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/megabyte-labs/common/dockerfile.git"
  },
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "bugs": {
    "url": "https://gitlab.com/megabyte-labs/common/dockerfile/-/issues"
  },
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.71",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "blueprint": {
    "description": "Includes common files used across Dockerfile repositories",
    "overview": "All of the Megabyte Labs repositories share configuration files. When this repository is updated, the changes are propagated down to all of our Dockerfile projects via CI. We encourage you to make use of this repository since it contains many configuration files and routines useful for Dockerfile development.",
    "name": "Dockerfile",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/dockerfile-common-files",
      "gitlab": "https://gitlab.com/megabyte-labs/common/dockerfile"
    },
    "slug": "dockerfile",
    "supportedApps": {
      "ansible-molecule": {
        "desc": "Project for container used to test with Ansible/Molecule"
      },
      "app": {
        "desc": "Dockerfile project for custom built apps"
      },
      "ci-pipeline": {
        "desc": "Base project for CI pipeline tools"
      },
      "software": {
        "desc": "Container project intended to be used for virtualizing pre-made software (e.g. NGINX)"
      }
    },
    "title": "Dockerfile Project Common Files"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config",
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off"
    }
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.py": [
      "black",
      "flake8"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*vault.yml": [
      "task ansible:vault:lint:file --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ]
  },
  "prettier": "@megabytelabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
