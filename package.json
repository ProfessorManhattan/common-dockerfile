{
  "private": false,
  "name": "@installdoc/common-dockerfile",
  "version": "0.0.1",
  "description": "Common files used in Dockerfile projects including global common files, documentation partials, and shared configurations",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/common-dockerfile.git"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/common/dockerfile/-/issues"
  },
  "type": "module",
  "scripts": {
    "build": "task donothing",
    "help": "task --menu",
    "prepare": "task common:husky",
    "repair": "bash <(curl -sS https://install.doctor/repair)",
    "start": "bash start.sh",
    "test": "task donothing"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-emoji-conventional"
    }
  },
  "dependencies": {},
  "optionalDependencies": {},
  "devDependencies": {
    "@commitlint/config-conventional": "^16.0.0",
    "@washingtondc/development": "latest",
    "cz-emoji-conventional": "^1.0.1",
    "eslint-config-strict-mode": "latest",
    "handlebars-helpers": "^0.10.0",
    "prettier-config-sexy-mode": "latest",
    "semantic-release-config": "latest"
  },
  "keywords": [
    "common",
    "docker",
    "dockerfile",
    "files",
    "mblabs",
    "megabytelabs",
    "npm",
    "package",
    "professormanhattan",
    "shared",
    "washingtondc"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "publishConfig": {
    "@megabyte:registry": "https://gitlab.com/api/v4/projects/25898653/packages/npm/",
    "access": "public"
  },
  "blueprint": {
    "description": "Common files used in Dockerfile projects including global common files, documentation partials, and shared configurations",
    "emoji_end": " üê≥",
    "emoji_start": "",
    "github_id": "R_kgDOGet1BA",
    "gitlab_group_id": "11097242",
    "gitlab_project_id": "25898653",
    "group": "common",
    "name": "Docker Common",
    "overview": "This repository contains files that propagate down to Dockerfile project repositories via CI. By doing this, dependencies and configuration files are kept in sync across many repositories. Individual Dockerfile projects inherit their upstream files by copying over the `.common` folder files and then the `.common-{{ PROJECT_TYPE }}` folder. After the individual projects do that, they merge the appropriate JSON into a `.variables.json` file and use that as the context to generate any files that match `*.hbs.*` or `*.handlebars`.",
    "profile": {
      "npmjs_organization": "installdoc"
    },
    "repository": {
      "github": "https://github.com/ProfessorManhattan/common-dockerfile",
      "gitlab": "https://gitlab.com/megabyte-labs/common/dockerfile"
    },
    "slug": "common-dockerfile",
    "subgroup": "dockerfile",
    "title": "Common Dockerfile Project Files"
  },
  "changelog": {
    "displayTypes": [
      "feat",
      "fix",
      "perf",
      "refactor",
      "revert"
    ],
    "showAuthor": true
  },
  "commitlint": {
    "extends": [],
    "helpUrl": "https://megabyte.space/docs/contributing/commits"
  },
  "eslintConfig": {
    "extends": "eslint-config-strict-mode",
    "rules": {
      "import/no-extraneous-dependencies": "warn",
      "max-len": "warn",
      "max-lines": "warn"
    }
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/!(logo).(jpg|png)": [
      "task image:compress --"
    ],
    "**/*": [
      "task lint:any --"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.sh": [
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "ntl": {
    "descriptions": {
      "build": "Builds the project, if needed",
      "help": "Display the Bodega Taskfile.yml interactive help menu",
      "prepare": "Hook, triggered by running npm install, that runs logic such as installing pre-commit hooks",
      "repair": "Fixes basic issues in projects that are having trouble running basic commands like 'task start'",
      "start": "Entrypoint for new developers that installs requirements and then runs 'task start'",
      "test": "Runs the appropriate test logic"
    }
  },
  "prettier": "prettier-config-sexy-mode",
  "release": {
    "branches": [
      "main",
      "master",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "extends": "semantic-release-config"
  }
}
